                    android:layout_width="wrap_content"
                    android:background="@drawable/item_khung"></TextView>
                <TextView android:textSize="30sp"
                    android:layout_height="100dp"
                    android:id="@+id/BCT5"
                    android:layout_width="wrap_content"
                    android:gravity="center"
                    android:background="@drawable/item_khung"></TextView>
                <TextView android:textSize="30sp"
                    android:layout_height="100dp"
                    android:id="@+id/BCT6"
                    android:layout_width="wrap_content"
                    android:gravity="center"
                    android:background="@drawable/item_khung"></TextView>
                <TextView android:textSize="30sp"
                    android:id="@+id/BCT7"
                    android:layout_height="100dp"
