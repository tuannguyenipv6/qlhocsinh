<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/rsz_login"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:id="@+id/iHinh"
            android:layout_centerHorizontal="true"></ImageView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:textSize="20sp"
            android:id="@+id/iSinhVien"
            android:layout_below="@+id/iHinh"></TextView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="250px"
            android:weightSum="4"
            android:padding="20dp"
            android:orientation="horizontal"
            android:layout_below="@+id/iSinhVien"
            android:id="@+id/iLink">
            <ImageButton
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:scaleType="fitCenter"
                android:padding="4dp"
                android:background="@null"
                android:id="@+id/TTD"
                android:src="@drawable/icon_tracuud"
                android:layout_height="wrap_content"></ImageButton>
            <ImageButton
                android:layout_weight="1"
                android:padding="4dp"
                android:id="@+id/TTFB"
                android:src="@drawable/icon_fb"
                android:scaleType="fitCenter"
                android:layout_width="match_parent"
                android:background="@null"
                android:layout_height="wrap_content"></ImageButton>
            <ImageButton
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:padding="4dp"
                android:background="@null"
                android:id="@+id/TTCall"
                android:src="@drawable/icon_call"
                android:scaleType="fitCenter"
                android:layout_height="wrap_content"></ImageButton>
            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:scaleType="fitCenter"
                android:id="@+id/TTSms"
                android:padding="4dp"
                android:background="@null"
                android:src="@drawable/icon_sms"></ImageButton>
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:text="Ghi Chú!"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/iLink"
            android:id="@+id/ighichu"></TextView>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="top"
            android:textColor="#3F51B5"
            android:padding="20dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:id="@+id/itextGhiChu"
            android:layout_marginLeft="5dp"
            android:background="@drawable/item_botron"
            android:layout_below="@+id/ighichu"></EditText>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/itextGhiChu"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:id="@+id/iLuu"
            android:text="Lưu"></Button>
    </RelativeLayout>
</ScrollView>