<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/rsz_1rsz_nenvuong"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-black"
        android:textSize="30sp"
        android:text="Đổi Mật Khẩu"
        android:id="@+id/BMTK1"
        android:textColor="#F41707"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"></TextView>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/BMTK1"
        android:textSize="25sp"
        android:digits="abcdefghijklmnopqrstuvwxyz0123456789"
        android:hint="Nhập Tài Khoản"
        android:maxLength="13"
        android:background="@drawable/item_nen_do"
        android:gravity="center"
        android:id="@+id/DoiTK"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"></EditText>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/DoiTK"
        android:textSize="25sp"
        android:inputType="numberPassword"
        android:id="@+id/DoiMKCu"
        android:hint="Nhập lại mật khẩu"
        android:maxLength="13"
        android:background="@drawable/item_nen_do"
        android:gravity="center"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"></EditText>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/DoiMKCu"
        android:textSize="25sp"
        android:id="@+id/DoiMKMoi"
        android:inputType="numberPassword"
        android:hint="Nhập Mật Khẩu Mới"
        android:maxLength="13"
        android:background="@drawable/item_nen_do"
        android:gravity="center"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"></EditText>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="10"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/DoiMKMoi">
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:layout_marginRight="20dp"
            android:text="Hủy"
            android:gravity="center"
            android:textSize="20dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/item_nen_click"
            android:id="@+id/HuyDoimk"></Button>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:background="@drawable/item_nen_click"
            android:layout_marginRight="20dp"
            android:text="OK"
            android:textSize="20dp"
            android:layout_marginLeft="20dp"
            android:gravity="center"
            android:id="@+id/Doi"></Button>
    </LinearLayout>
</RelativeLayout>